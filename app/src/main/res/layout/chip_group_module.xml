<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/generic14dp"
        android:layout_marginEnd="@dimen/generic14dp"
        android:orientation="vertical">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipSpacing="@dimen/generic12dp"
            app:singleLine="true" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/generic14dp"
            app:chipSpacing="@dimen/generic12dp"
            app:singleLine="true" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/generic14dp"
            app:chipSpacing="@dimen/generic12dp"
            app:singleLine="true" />

    </LinearLayout>
</HorizontalScrollView>
